<?xml version="1.0" encoding="utf-8"?>
<arborescence>
    <index>
        <title>glovZ</title>
        <controller>home</controller>
        <layout>home.tpl</layout>
    </index>
    <allBlocks>
        <title>Ensemble des blocks</title>
        <controller>allBlocks</controller>
        <layout>other.tpl</layout>
    </allBlocks>
    <connect>
        <title>Connexion</title>
        <controller>user</controller>
        <method>connect</method>
        <layout>home.tpl</layout>
    </connect>
    <disconnect>
        <title>Connexion</title>
        <controller>user</controller>
        <method>disconnect</method>
        <layout>other.tpl</layout>
    </disconnect>
    <dashboard>
        <title>Tableau de bord</title>
        <controller>dashboard</controller>
        <layout>other.tpl</layout>
        <accessControl>
            <controller>user</controller>
            <method>needConnect</method>
        </accessControl>
    </dashboard>
	<project>
		<title>Projets</title>
		<controller>project</controller>
		<layout>other.tpl</layout>
		<accessControl>
			<controller>user</controller>
			<method>needConnect</method>
		</accessControl>
		<!-- Opérations sur les projets -->
		<create-project>
			<title>Créer un nouveau projet</title>
			<controller>project</controller>
			<method>createProject</method>
			<layout>other.tpl</layout>
		</create-project>
		<edit-project>
			<title>Modifier un projet</title>
			<controller>project</controller>
			<method>editProject</method>
			<layout>other.tpl</layout>
		</edit-project>
		<delete-project>
			<title>Supprimer un projet</title>
			<controller>project</controller>
			<method>deleteProject</method>
			<layout>other.tpl</layout>
		</delete-project>
		<!-- Opérations sur les jalons -->
		<create-milestone>
			<title>Créer un nouveau jalon</title>
			<controller>project</controller>
			<method>createMilestone</method>
			<layout>other.tpl</layout>
		</create-milestone>
		<edit-milestone>
			<title>Modifier un jalon</title>
			<controller>project</controller>
			<method>editMilestone</method>
			<layout>other.tpl</layout>
		</edit-milestone>
		<delete-milestone>
			<title>Supprimer un jalon</title>
			<controller>project</controller>
			<method>deleteMilestone</method>
			<layout>other.tpl</layout>
		</delete-milestone>
		<!-- Opérations sur les tâches -->
		<create-task>
			<title>Créer un nouvelle tâche</title>
			<controller>project</controller>
			<method>createTask</method>
			<layout>other.tpl</layout>
		</create-task>
		<edit-task>
			<title>Modifier une tâche</title>
			<controller>project</controller>
			<method>editTask</method>
			<layout>other.tpl</layout>
		</edit-task>
		<delete-task>
			<title>Supprimer une tâche</title>
			<controller>project</controller>
			<method>deleteTask</method>
			<layout>other.tpl</layout>
		</delete-task>
		<!-- Opérations sur les membres -->
		<remove-member>
			<title>Retirer un membre du projet</title>
			<controller>project</controller>
			<method>removeMember</method>
			<layout>other.tpl</layout>
		</remove-member>
	</project>
	<client>
		<title>Clients</title>
		<controller>client</controller>
		<layout>other.tpl</layout>
		<accessControl>
			<controller>user</controller>
			<method>needConnect</method>
		</accessControl>
		<create-client>
			<title>Nouveau client</title>
			<controller>client</controller>
			<method>createClient</method>
			<layout>other.tpl</layout>
		</create-client>
		<edit-client>
			<title>Modifier client</title>
			<controller>client</controller>
			<method>editClient</method>
			<layout>other.tpl</layout>
		</edit-client>
		<delete-client>
			<title>Supprimer un client</title>
			<controller>client</controller>
			<method>deleteClient</method>
			<layout>other.tpl</layout>
		</delete-client>
	</client>
    <profil>
        <title>Mon profil</title>
        <controller>user</controller>
        <method>myProfil</method>
        <layout>other.tpl</layout>
        <accessControl>
            <controller>user</controller>
            <method>needConnect</method>
        </accessControl>
    </profil>
    <members>
        <title>Liste des membres</title>
        <controller>user</controller>
        <method>members</method>
        <layout>other.tpl</layout>
        <accessControl>
            <controller>user</controller>
            <method>needDT</method>
        </accessControl>
        <new>
            <title>Ajouter un membre</title>
            <controller>user</controller>
            <method>newMember</method>
            <layout>other.tpl</layout>
            <accessControl>
                <controller>user</controller>
                <method>needDT</method>
            </accessControl>
        </new>
        <edit>
            <title>Editer un membre</title>
            <controller>user</controller>
            <method>edit</method>
            <layout>other.tpl</layout>
            <accessControl>
                <controller>user</controller>
                <method>needDT</method>
            </accessControl>
        </edit>
        <delete>
            <title>Editer un membre</title>
            <controller>user</controller>
            <method>delete</method>
            <layout>other.tpl</layout>
            <accessControl>
                <controller>user</controller>
                <method>needDT</method>
            </accessControl>
        </delete>
        <pdf>
            <title></title>
            <controller>user</controller>
            <method>membersPDF</method>
            <layout>other.tpl</layout>
        </pdf>
    </members>
    <super-administrateur>
        <new-membre>
            <title>Nouveau membre</title>
            <controller>new-member</controller>
            <layout>other.tpl</layout>
        </new-membre>
    </super-administrateur>
</arborescence>